generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// Визначення ENUM (Переліків)
enum UserRole {
  ADMIN
  MANAGER
  WORKER
}

enum SensorStatus {
  ACTIVE
  INACTIVE
  MAINTENANCE
}

enum AlertStatus {
  NEW
  ACKNOWLEDGED
  RESOLVED
}

// Моделі (Таблиці)

model Store {
  id   String @id @default(uuid())
  name String

  // Зв'язки
  users   User[]
  zones   Zone[]
  sensors Sensor[]
  alerts  Alert[]
}

model User {
  id            String  @id @default(uuid())
  email         String  @unique
  password_hash String
  first_name    String
  last_name     String
  patronymic    String? // '?' означає Nullable

  role     UserRole @default(WORKER)
  store    Store    @relation(fields: [store_id], references: [id])
  store_id String

  // Зв'язки
  assignedSensors SensorAssignment[]
  resolvedAlerts  Alert[]
}

model Zone {
  id       String @id @default(uuid())
  name     String
  min_temp Float
  max_temp Float

  store    Store  @relation(fields: [store_id], references: [id])
  store_id String

  // Зв'язки
  sensors Sensor[]

  // Унікальний індекс: назва зони має бути унікальною в межах одного магазину
  @@unique([store_id, name])
}

model Sensor {
  id       String       @id @default(uuid())
  name     String
  location String?
  status   SensorStatus @default(ACTIVE)

  zone     Zone   @relation(fields: [zone_id], references: [id])
  zone_id  String
  store    Store  @relation(fields: [store_id], references: [id])
  store_id String

  // Зв'язки
  readings   SensorReading[]
  alerts     Alert[]
  assignedTo SensorAssignment[]
}

model SensorReading {
  id          String   @id @default(uuid())
  temperature Float
  timestamp   DateTime @default(now())

  sensor    Sensor @relation(fields: [sensor_id], references: [id])
  sensor_id String
}

model Alert {
  id         String      @id @default(uuid())
  status     AlertStatus @default(NEW)
  created_at DateTime    @default(now())

  sensor    Sensor @relation(fields: [sensor_id], references: [id])
  sensor_id String
  store     Store  @relation(fields: [store_id], references: [id])
  store_id  String

  resolvedByUser      User?   @relation(fields: [resolved_by_user_id], references: [id])
  resolved_by_user_id String? // Nullable
}

model SensorAssignment {
  user      User   @relation(fields: [user_id], references: [id])
  user_id   String
  sensor    Sensor @relation(fields: [sensor_id], references: [id])
  sensor_id String

  // Складений Первинний Ключ (Composite Primary Key)
  @@id([user_id, sensor_id])
}
